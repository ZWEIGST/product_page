{
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "vueIndentScriptAndStyle": true,
  "plugins": ["prettier-plugin-tailwindcss"],
  "parser": "scss",
  "requirePragma": false,
  "overrides": [
    {
      "files": "*.{scss,css}",
      "options": {
        "singleQuote": false,
        "sassConfig": {
          "indentType": "space",
          "indentWidth": 2
        }
      }
    }
  ]
}
